#include <stdio.h>
#include <stdlib.h>
#define MAX 100

char stk[100];
int top = -1;

int isEmpty(){
    return top == -1;
}
int isFull(){
    return top == MAX - 1;
}

char peek(){
    return stk[top];
}

char pop(){
    if(isEmpty())
        return -1;

    char ch = stk[top];
    top--;
    return(ch);
}

void push(char oper){
    if(isFull())
        printf("Stack Full!!!!");
   
    else{
        top++;
        stk[top] = oper;
    }
}

int checkIfOperand(char ch) 
{ 
    return (ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z'); 
} 

int precedence(char ch) 
{ 
    switch (ch) 
    { 
    case '+': 
    case '-': 
        return 1; 

    case '*': 
    case '/': 
        return 2; 

    case '^': 
        return 3; 
    } 
    return -1; 
} 

int covertInfixToPostfix(char* infix) 
{ 
    int i, j;

    for (i = 0, j = -1; infix[i]; ++i) 
    { 
       if (checkIfOperand(infix[i])) 
            infix[++j] = infix[i]; 

        else if (infix[i] == '(') 
            push(infix[i]); 

        else if (infix[i] == ')') 
        { 
            while (!isEmpty() && peek() != '(') 
                infix[++j] = pop(); 
            if (!isEmpty() && peek() != '(') 
                return -1; // invalid expression              
            else
                pop(); 
        }
        else // if an opertor
        { 
            while (!isEmpty() && precedence(infix[i]) <= precedence(peek())) 
                infix[++j] = pop(); 
            push(infix[i]); 
        } 

    } 

    while (!isEmpty()) 
        infix[++j] = pop(); 

    infix[++j] = '\0'; 
    printf( "%s", infix); 
} 

int main()
{
     char infix[100];
     printf("Enter the expression");
     scanf("%s",infix);
    covertInfixToPostfix(infix); 
    return 0; 
}
